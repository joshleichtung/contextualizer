{
  "name": "contextualizer",
  "version": "1.0.0",
  "description": "MCP server for AI-optimized project setup and management",
  "type": "module",
  "main": "./dist/server.js",
  "bin": {
    "contextualizer": "./dist/server.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "claude",
    "ai",
    "development",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "pino": "^8.21.0"
  },
  "devDependencies": {
    "@types/node": "^18.19.68",
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}
